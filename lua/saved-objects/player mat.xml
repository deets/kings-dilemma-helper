<Defaults>
    <Text color="#DDDDDD" fontSize="20" alignment="MiddleLeft"/>
    <Button fontSize="20" textOutline="#ffffff"/>
</Defaults>

<VerticalLayout scale=".5" width="380" height="220" position="0 160 -22" rotation="0 0 180">
    <HorizontalLayout>
        <Text>Vote</Text>
        <Button onClick="vote(yes)">Yes</Button>
        <Button onClick="vote(no)">No</Button>        
    </HorizontalLayout>
    <HorizontalLayout >
        <Text>Pass</Text>
        <Button onClick="pass_for(power)">Power</Button>
        <Button onClick="pass_for(arbitration)">Arbitration</Button>
    </HorizontalLayout>
</VerticalLayout>
