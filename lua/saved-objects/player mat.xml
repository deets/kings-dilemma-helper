<Defaults>
    <Text color="#DDDDDD" fontSize="20" alignment="MiddleLeft"/>
    <Button fontSize="20" textOutline="#ffffff"/>
</Defaults>

<VerticalLayout scale=".5" width="380" height="220" position="0 160 -22" rotation="0 0 180">
    <HorizontalLayout>
        <Text>Yes</Text>
        <Button onClick="voteYes">+</Button>
    </HorizontalLayout>
    <HorizontalLayout >
        <Text>Pass</Text>
        <Button onClick="passForPower">Power</Button>
        <Button onClick="passForArbitration">Arbitration</Button>
    </HorizontalLayout>
    <HorizontalLayout>
        <Text>No</Text>
        <Button onClick="voteNo">+</Button>
    </HorizontalLayout>
    <HorizontalLayout>
        <Text>Name</Text>
        <InputField onValueChanged="set_house_name">Your House</InputField>
    </HorizontalLayout>
    </VerticalLayout>
